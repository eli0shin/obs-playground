{
  "name": "obs-playground",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npx patch-package",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules && npm install",
    "dev:all": "bash scripts/dev.sh otel",
    "dev:dd:all": "bash scripts/dev.sh dd",
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "playwright": "npm run playwright:normal && npm run playwright:custom",
    "playwright:normal": "BASE_URL=${NORMAL_URL:-https://localhost} npm run test -w @obs-playground/playwright-tests",
    "playwright:custom": "BASE_URL=${CUSTOM_URL:-https://localhost:8443} npm run test -w @obs-playground/playwright-tests",
    "playwright:repeat": "npm run test:repeat -w @obs-playground/playwright-tests"
  },
  "keywords": [],
  "author": "elimelech.oshinsky@gmail.com",
  "license": "ISC",
  "packageManager": "npm@11.5.1",
  "devDependencies": {
    "@types/express": "^5.0.4",
    "concurrently": "^9.2.1",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8"
  }
}
