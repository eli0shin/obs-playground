# OpenTelemetry Configuration - Shared across all services

# Honeycomb
# Get your API key from: https://ui.honeycomb.io/account
HONEYCOMB_ENDPOINT=https://api.honeycomb.io
HONEYCOMB_API_KEY=your_honeycomb_api_key_here

# Grafana
# Configure OTLP at: https://grafana.com/docs/grafana-cloud/monitor-applications/application-observability/setup/collector/opentelemetry-collector/
GRAFANA_OTLP_ENDPOINT=https://otlp-gateway-prod-us-east-0.grafana.net/otlp
GRAFANA_OTLP_AUTH="Basic your_base64_encoded_grafana_credentials_here"

# Sentry
# Create a new project at: https://sentry.io
SENTRY_OTLP_ENDPOINT=https://oYOUR_ORG_ID.ingest.us.sentry.io/api/YOUR_PROJECT_ID/integration/otlp
SENTRY_AUTH=sentry sentry_key=your_sentry_key_here
SENTRY_AUTH_TOKEN=sntrys_your_sentry_auth_token_here
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_key@oYOUR_ORG_ID.ingest.us.sentry.io/YOUR_PROJECT_ID

# Datadog
# Local Datadog agent - no API key required (agent handles authentication)
DATADOG_OTLP_ENDPOINT=http://localhost:4318
NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=your_datadog_client_token
NEXT_PUBLIC_DATADOG_APP_ID=your_datadog_application_id

# Statsig
# Get your client key from: https://console.statsig.com
NEXT_PUBLIC_STATSIG_CLIENT_KEY=client-your_statsig_client_key_here

# Service URLs (default values for local development)
GRAPHQL_URL=http://localhost:4000/graphql
EXPRESS_URL=http://localhost:3001
